[Unit]
Description=Unify-RSS HTTP Service
After=syslog.target network.target

[Service]
Type=simple
User=unify-rss
Group=unify-rss
Environment="PATH=${PATH}:/usr/local/pkg/scala-cli/bin"
WorkingDirectory=/home/swaldman/development/gitproj/unify-rss
ExecStart=scala-cli main
KillMode=process
KillSignal=SIGINT
TimeoutStopSec=90
Restart=on-failure
RestartSec=10s
RestartForceExitStatus=SIGPIPE
StandardError=journal
StandardOutput=journal
StandardInput=null

[Install]
WantedBy=multi-user.target
